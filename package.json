{
  "name": "happy-vue",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.6.0",
  "description": "Happy Vue.js monorepo - Web and mobile client for Claude Code remote control",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "yarn workspace @happy-vue/web dev",
    "dev:mobile": "yarn workspace @happy-vue/mobile dev",
    "build": "yarn workspaces foreach -A run build",
    "build:web": "yarn workspace @happy-vue/web build",
    "build:mobile": "yarn workspace @happy-vue/mobile build",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "lint": "yarn workspaces foreach -A run lint",
    "lint:fix": "yarn workspaces foreach -A run lint:fix",
    "test": "yarn workspaces foreach -A run test",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules .yarn/cache"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "happy",
    "vue",
    "nativescript",
    "monorepo",
    "claude-code"
  ],
  "license": "MIT"
}
