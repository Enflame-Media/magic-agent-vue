{
  "name": "happy-vue",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.12.0",
  "description": "Happy Vue.js workspace - Web client for Claude Code remote control",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "yarn workspace @happy-vue/web dev",
    "build": "yarn workspaces foreach -A run build",
    "build:web": "yarn workspace @happy-vue/web build",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "lint": "eslint . && oxlint .",
    "lint:eslint": "eslint .",
    "lint:oxlint": "oxlint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "yarn workspaces foreach -A run test",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules .yarn/cache"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "oxlint": "^1.39.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "happy",
    "vue",
    "monorepo",
    "claude-code"
  ],
  "license": "MIT"
}
