{
  "name": "@happy-vue/web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Happy Vue.js web application for Claude Code remote control",
  "scripts": {
    "dev": "vite",
    "build": "npx vue-tsc --noEmit && npx vite build",
    "preview": "vite preview",
    "typecheck": "npx vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "echo 'Linting handled at root level'",
    "lint:fix": "echo 'Linting handled at root level'",
    "clean": "rm -rf dist .vite",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production"
  },
  "dependencies": {
    "@happy-vue/protocol": "workspace:*",
    "@happy-vue/shared": "workspace:*",
    "@revenuecat/purchases-js": "^1.23.1",
    "@tabler/icons-vue": "^3.36.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/vue-table": "^8.21.3",
    "@unovis/ts": "^1.6.2",
    "@unovis/vue": "^1.6.2",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^14.1.0",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.562.0",
    "pinia": "^3.0.4",
    "reka-ui": "^2.7.0",
    "shiki": "^3.21.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tweetnacl": "^1.0.3",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.26",
    "vue-i18n": "^12.0.0-alpha.3",
    "vue-input-otp": "^0.3.2",
    "vue-router": "^4.6.4",
    "vue-sonner": "^2.0.9",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.20.1",
    "@types/node": "^25.0.6",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "happy-dom": "^20.1.0",
    "shadcn-vue": "^2.4.3",
    "turbo": "^2.7.4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.2.2",
    "wrangler": "^4.58.0"
  }
}
